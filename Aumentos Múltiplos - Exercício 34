salario = float(input('Qual o valor do seu salário R$: '))
if salario > 1250.0:
    aumento1 = salario + (salario * 10 / 100)
    print('O salário ficou = R${}{:.2f}{}'.format('\033[31m', aumento1, '\033[m'))
elif salario <= 1250.0:
    aumento2 = salario + (salario * 15 / 100)
    print('O salário ficou = R${:.2f}'.format(aumento2))

